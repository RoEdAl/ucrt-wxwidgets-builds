     wxDECLARE_DYNAMIC_CLASS_NO_ASSIGN(wxDropFilesEvent);
+	
+	static const wxString* clone_string_array(const wxString* files, size_t noFiles)
+	{
+		wxString* const res = new wxString[noFiles];
+		for(size_t i = 0; i < noFiles; ++i)
+		{
+			res[i] = files[i];
+		}
+		return res;
+	}
